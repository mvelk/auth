<h1>Sign Up</h1>
<form action='/users' method='POST'>
  <ul>
    <% @user.errors.full_messages.each do |err_msg| %>
      <li><%= err_msg %></li>
    <% end %>
  </ul>

  <label for='user_username'>Username</label>
  <input
    type='text'
    name='user[username]'
    id='user_username'
    value=<%= @user.username %>
    >
  <br>


  <label for='user_password'>Password</label>
  <input
    type='password'
    name='user[password]'
    id='user_password'>
  <br>

  <input type='submit' value='Submit'>
</form>
